# Testing Environment Configuration
# This file contains environment-specific settings for testing

# Environment
ENV=testing

# Logging (minimal for tests)
LOG_LEVEL=ERROR
LOG_REQUEST_DETAILS=false
STRUCTURED_LOGGING=true

# Server Configuration
PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=5s
SERVER_SHUTDOWN_GRACE=1s

# Elevator Configuration (fast for testing)
DEFAULT_MAX_FLOOR=10
DEFAULT_MIN_FLOOR=0
EACH_FLOOR_DURATION=10ms
OPEN_DOOR_DURATION=10ms
ELEVATOR_OPERATION_TIMEOUT=1s
CREATE_ELEVATOR_TIMEOUT=1s
ELEVATOR_REQUEST_TIMEOUT=500ms
STATUS_UPDATE_TIMEOUT=100ms
HEALTH_CHECK_TIMEOUT=100ms
MAX_ELEVATORS=20
DEFAULT_ELEVATOR_COUNT=0
ELEVATOR_NAME_PREFIX=Test-Elevator
SWITCH_ON_CHANNEL_BUFFER=5

# HTTP Configuration (no rate limiting for tests)
RATE_LIMIT_RPM=10000
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_CLEANUP=1m
MAX_REQUEST_SIZE=1048576
HTTP_REQUEST_TIMEOUT=10s
CORS_ENABLED=true
CORS_MAX_AGE=1h
CORS_ALLOWED_ORIGINS=*

# Monitoring (disabled for testing)
METRICS_ENABLED=false
METRICS_PATH=/metrics
STATUS_UPDATE_INTERVAL=100ms
HEALTH_ENABLED=false
HEALTH_PATH=/health
CORRELATION_ID_HEADER=X-Request-ID

# Circuit Breaker (disabled for testing)
CIRCUIT_BREAKER_ENABLED=false
CIRCUIT_BREAKER_MAX_FAILURES=10
CIRCUIT_BREAKER_RESET_TIMEOUT=5s
CIRCUIT_BREAKER_HALF_OPEN_LIMIT=5
CIRCUIT_BREAKER_FAILURE_THRESHOLD=0.8

# WebSocket (disabled for testing)
WEBSOCKET_ENABLED=false
WEBSOCKET_PATH=/ws/status
WEBSOCKET_CONNECTION_TIMEOUT=1m
WEBSOCKET_WRITE_TIMEOUT=1s
WEBSOCKET_READ_TIMEOUT=10s
WEBSOCKET_PING_INTERVAL=10s
WEBSOCKET_MAX_CONNECTIONS=10
WEBSOCKET_BUFFER_SIZE=512 