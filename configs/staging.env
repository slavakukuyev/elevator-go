# Staging Environment Configuration
# This file contains environment-specific settings for staging (production-like with debugging)

# Environment
ENV=staging

# Logging
LOG_LEVEL=INFO
LOG_REQUEST_DETAILS=true
STRUCTURED_LOGGING=true

# Server Configuration
PORT=6660
SERVER_READ_TIMEOUT=45s
SERVER_WRITE_TIMEOUT=45s
SERVER_IDLE_TIMEOUT=180s
SERVER_SHUTDOWN_TIMEOUT=20s
SERVER_SHUTDOWN_GRACE=3s

# Elevator Configuration
DEFAULT_MAX_FLOOR=9
DEFAULT_MIN_FLOOR=0
EACH_FLOOR_DURATION=500ms
OPEN_DOOR_DURATION=2s
ELEVATOR_OPERATION_TIMEOUT=30s
CREATE_ELEVATOR_TIMEOUT=10s
ELEVATOR_REQUEST_TIMEOUT=5s
STATUS_UPDATE_TIMEOUT=3s
HEALTH_CHECK_TIMEOUT=2s
MAX_ELEVATORS=75
DEFAULT_ELEVATOR_COUNT=0
ELEVATOR_NAME_PREFIX=Stage-Elevator
SWITCH_ON_CHANNEL_BUFFER=10

# HTTP Configuration (moderate rate limiting)
RATE_LIMIT_RPM=200
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_CLEANUP=5m
MAX_REQUEST_SIZE=1048576
HTTP_REQUEST_TIMEOUT=45s
CORS_ENABLED=true
CORS_MAX_AGE=12h
CORS_ALLOWED_ORIGINS=https://staging.yourdomain.com

# Monitoring
METRICS_ENABLED=true
METRICS_PATH=/metrics
STATUS_UPDATE_INTERVAL=1s
HEALTH_ENABLED=true
HEALTH_PATH=/health
CORRELATION_ID_HEADER=X-Request-ID

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_MAX_FAILURES=7
CIRCUIT_BREAKER_RESET_TIMEOUT=30s
CIRCUIT_BREAKER_HALF_OPEN_LIMIT=4
CIRCUIT_BREAKER_FAILURE_THRESHOLD=0.65

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws/status
WEBSOCKET_CONNECTION_TIMEOUT=10m
WEBSOCKET_WRITE_TIMEOUT=5s
WEBSOCKET_READ_TIMEOUT=60s
WEBSOCKET_PING_INTERVAL=30s
WEBSOCKET_MAX_CONNECTIONS=750
WEBSOCKET_BUFFER_SIZE=1024 